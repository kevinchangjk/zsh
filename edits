#! /bin/zsh

function edit() {
    case $1 in
        'this')
            nvim $ZSH_DOTS/edits;;
        'imwheel')
            nvim $REPOS/arch/settings/dotfiles/.imwheelrc;;
        'dunst')
            nvim $REPOS/arch/settings/.config/dunst/dunstrc;;
        'kitty')
            nvim $REPOS/arch/settings/.config/kitty/kitty.conf;;
        'lsd')
            nvim $REPOS/arch/settings/.config/lsd/config.yaml;;
        'picom')
            nvim $REPOS/arch/settings/.config/picom/picom.conf;;
        'rofi')
            nvim $REPOS/arch/settings/.config/rofi/config.rasi;;
        'dwm')
            nvim $REPOS/dwm/config.def.h;;
        'git')
            nvim $HOME/.gitconfig;;
        'nvim')
            nvim $REPOS/vim/init.vim;;
        'keeb')
            cd $REPOS/qmk_firmware
            nvim $REPOS/qmk_firmware/keyboards/dz60/keymaps/khang/keymap.c;;
        *) echo "nothing happened.";;
    esac
}
alias redit="nvim ~/.config/ranger/rifle.conf"
alias vedit="nvim ~/.config/nvim/init.vim"
alias tedit="nvim ~/.config/kitty/kitty.conf" # t for terminal
alias ledit="nvim ~/.config/lsd/config.yaml" # ls, ll, la manager
