#! /bin/zsh

function ed() {
  case $1 in
  '.')
    $VIM $ZSH_DOTS/edits;;
  'alacritty'|'a') # bar
    $VIM $HOME/.config/alacritty/alacritty.yml;;
  'dwmblocks'|'b') # bar
    $VIM $REPOS/dwm/dwmblocks/blocks.def.h;;
  'dwm'|'d')
    $VIM $REPOS/dwm/config.def.h;;
  'dunst')
    $VIM ~/.config/dunst/dunstrc;;
  'imwheel'|'i')
    $VIM $REPOS/arch/settings/dotfiles/.imwheelrc;;
  'firefox'|'f')
    $VIM $HOME/.mozilla/firefox/eg18esvc.default-release/chrome/userChrome.css;;
  'font'|'fo')
    sudo $VIM $HOME/.config/fontconfig/conf.d/50-user.conf;;
  'git'|'g')
    $VIM $HOME/.gitconfig;;
  'hosts'|'h')
    $VIM $REPOS/arch/settings/etc/hosts;;
  'keeb'|'k')
    cd $REPOS/qmk_firmware && $VIM keyboards/dz60/keymaps/khang/keymap.c;;
  'lsd'|'l')
    $VIM $REPOS/arch/settings/.config/lsd/config.yaml;;
  'navigation'|'n')
    $VIM $REPOS/zsh/alias/nav;;
  'picom'|'p')
    $VIM $REPOS/arch/settings/.config/picom/picom.conf;;
  'rofi'|'r')
    $VIM $REPOS/arch/settings/.config/rofi/config.rasi;;
  'skhd'|'s')
    $VIM ~/.config/skhd/skhdrc;;
  'kitty'|'t') # terminal
    $VIM $REPOS/arch/settings/.config/kitty/kitty.conf;;
  'ueli'|'u')
    $VIM $HOME/Library/Application\ Support/ueli/config.json;;
  'nvim'|'v')
    $VIM $REPOS/neovim/init.vim;;
  'vim')
    $VIM $REPOS/neovim/vimrc;;
  'vs')
    $VIM $REPOS/neovim/sets.vim;;
  'vc')
    $VIM $REPOS/neovim/onedark.colorway.vim;;
  'xinit'|'x')
    $VIM $REPOS/arch/settings/dotfiles/.xinitrc;;
  'xmonad'|'xm')
    $VIM $HOME/.xmonad/xmonad.hs;;
  'xmobar'|'xb')
    $VIM $HOME/.xmobarrc;;
  'yabai'|'y')
    $VIM ~/.config/yabai/yabairc;;
  'zsh'|'z')
    $VIM $REPOS/zsh;;
  'zshrc'|'zp') 
    $VIM $REPOS/zsh/prompt;;
  'zshrc'|'zz') # zsh's zshrc
    $VIM $REPOS/zsh/zshrc;;
  *) echo "nothing happened.";;
  esac
}
