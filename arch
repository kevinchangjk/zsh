#! /bin/zsh 
alias cdisp="xrandr --output HDMI1 --above eDP1 --mode 1920x1080 && ~/.fehbg"
alias arch="cd $REPOS/arch"
alias xedit="nvim ~/.xinitrc"
function eventviewer() {
     xev | awk -F'[ )]+' '/^KeyPress/ { a[NR+2] } NR in a { printf "%-3s %s\n", $5, $8 }'
}

#  ----------
# | MOUNTING |
#  ----------
function mountthe() {
    sudo mkdir -p /mnt/$2
    sudo mount $1 /mnt/$2 -o umask=000
    MOUNTED=($(ls /mnt))
    echo ${GREEN}"Mounted drives:"${NORMAL}
    for i in ${MOUNTED[@]}; do
        echo ${RED}"* "${NORMAL}$i
    done
    cd /mnt/$2
}
function umountthe() {
    sudo umount /mnt/$1
    sudo rmdir /mnt/$1
    MOUNTED=($(ls /mnt))
    echo ${GREEN}"Mounted drives:"${NORMAL}
    for i in ${MOUNTED[@]}; do
        echo ${RED}"* "${NORMAL}$i
    done
}
function mountexfat() {
    sudo mkdir -p /mnt/$2
    sudo mount -t exfat $1 /mnt/$2
    MOUNTED=($(ls /mnt))
    echo ${GREEN}"Mounted drives:"${NORMAL}
    for i in ${MOUNTED[@]}; do
        echo ${RED}"* "${NORMAL}$i
    done
    cd /mnt/$2
}
function listmounted() {
    MOUNTED=($(ls /mnt))
    echo ${GREEN}"Mounted drives:"${NORMAL}
    for i in ${MOUNTED[@]}; do
        echo ${RED}"* "${NORMAL}$i
    done
}

#  -----
# | DWM |
#  -----
alias dwmm="cd $REPOS/dwm && rm -f config.h && make && sudo make install clean"
alias 2dwm="cd $REPOS/dwm"
alias ldwm="startx"
alias lnrd="cd $REPOS/dwm && rm -f config.h && make && sudo make install clean && cd ~ && startx"
alias dedit="nvim -S ~/.config/nvim/sessions/dwm"
alias bedit="nvim $REPOS/dwmblocks/blocks.def.h"
alias dwmbm="cd $REPOS/dwmblocks && rm -f blocks.h && sudo make clean install"
alias last20="expac --timefmt='%Y-%m-%d %T' '%l\t%n'|sort -n|tail -n 20"
